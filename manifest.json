{
    "manifest_version": 4,
    "type": "theme",
    "name": "仿星穹铁道短信UI",
    "slug": "starrail_ui",
    "description": "仿照星穹铁道中的角色短信界面的UI.",
    "version": "0.2.0",
    "icon": "./res/icon.png",
    "thumb": "./res/thumb.svg",
    "authors": [
        {
            "name": "Syrie",
            "link": "https://github.com/SyrieYume"
        }
    ],
    "repository": {
        "repo": "SyrieYume/starrail_ui",
        "branch": "main",
        "release": {
            "tag": "latest",
            "file": "starrail_ui.zip"
        }
    },
    "platform": ["win32", "darwin", "linux"],
    "injects": {
        "renderer": "./src/renderer.js",
        "main": "./src/main.js",
        "preload": "./src/preload.js"
    }
}
